{% extends 'users.html.twig' %}

{% block title %}{{ 'Profil of' |trans}} {{ app.user.firstname }} {{ app.user.lastname }}{% endblock %}

{% block body %}
    <div class="grix xs4 container">
        <div class="col-xs4">
            <h1>{{ 'Profil of' |trans}} {{ app.user.firstname }} {{ app.user.lastname }}</h1>
        </div>
        <div class="col-xs1">{{ 'LastName' |trans}} :</div>
        <div class="col-xs3">{{ app.user.lastname }}</div>
        <div class="col-xs1">{{ 'FirstName'|trans}} :</div>
        <div class="col-xs3">{{ app.user.firstname }}</div>
        <div class="col-xs1">{{ 'Email'|trans}} :</div>
        <div class="col-xs3">{{ app.user.email }}</div>
        <div class="col-xs4">
            <a href="#" class="btn shadow-1 rounded-1 green">{{ 'Modify the profile' |trans}}</a>
            <a href="#" class="btn shadow-1 rounded-1 green">{{ 'Modify the password' |trans}}</a>
        </div>

        <div class="col-xs4">
            <h1>{{ 'Announces of' |trans}} {{ app.user.firstname }} {{ app.user.lastname }} ( {{ app.user.annonces | length }} )</h1>
        </div>

        {% for annonce in app.user.annonces %}
            <div class="col-xs1">{{ 'Title' |trans}} :</div>
            <div class="col-xs3">{{ annonce.title }}</div>
        {% endfor %}

    </div>
{% endblock %}
